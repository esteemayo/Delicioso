mixin accountData
    form.form-user-data
        .form__group
            label.form__label(for="name") Name
            input#name.form__input(type="text" name="name" value=user.name)

        .form__group
            label.form__label(for="email") Email
            input#email.form__input(type="email" name="email" value=user.email)

        .form__group.form__photo-upload
            if user.photo
                img.form__user-photo(src=`/img/users/${user.photo}` alt=user.name title=user.name)

            input#photo.form__upload(type="file" name="photo" accept="image/*")
            label(for="photo") Choose new photo

        .form__group
            input.button(type="submit", value="Update My Account â†’")
