mixin registerForm
    .register-form
        form.form.form--register
            h2.heading-secondary Register
            .form__group
                label.form__label(for="name") Name
                input#name.form__input(type="text" name="name" required autofocus)

            .form__group
                label.form__label(for="email") Email
                input#email.form__input(type="email" name="email" placeholder="you@example.com" required)

            .form__group
                label.form__label(for="password") Password
                input#password.form__input(type="password" name="password" minlength="8" placeholder="********" required)

            .form__group
                label.form__label(for="passwordConfirm") Confirm Password
                input#passwordConfirm.form__input(type="password" name="passwordConfirm" minlength="8" placeholder="********" required)

            .form__group
                label.form__label(for="photo") Photo
                input#photo.form__input(type="file" name="photo" accept="image/*")

            .form__group
                input.button(type="submit" value="Register â†’")